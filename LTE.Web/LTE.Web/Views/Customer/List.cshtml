@using LTE.Web.ViewModels.Customer
@using LTE.Web.Models
@model LTE.Core.IPagedList<CustomerViewModel> 
@{
    ViewBag.Title = "List";
    IEnumerable<CustomerViewModel> customers = ViewBag.Data as IEnumerable<CustomerViewModel>;
}

<div class="content-header">
    <h1>
        Customer
        <small>Manage customer</small>
    </h1>
</div>

<div class="content">
    <div>
        <a href="@Url.Action("Create","UserRole")" class="btn btn-primary">Add new role</a>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Manage Customers</h3>
                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover table-bordered">
                        <tr>
                            <th>Email</th>
                            <th>Name</th>
                            <th>Customer Roles</th>
                            <th>Company Name</th>
                            <th>Active</th>
                            <th>Edit</th>
                        </tr>
                        @foreach (var customer in Model)
                        {
                            <tr>
                                <td>@customer.Email</td>
                                <td>@customer.FullName</td>
                                <td>
                                    <div>
                                        <span class="label label-default">Default</span>
                                        @foreach (string role in customer.Roles)
                                        {
                                            <span class="label label-success">@role</span>
                                        }
                                    </div>
                                </td>
                                <td>@customer.Company</td>
                                <td>@customer.Active</td>
                                <td>
                                    <a href="@Url.Action("Edit", "UserRole", new { id = customer.Id})">Edit</a>
                                </td>
                            </tr>
                        }


                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- Pagination -->
            <div><span class="badge">@Model.FromItem</span> - <span class="badge">@Model.ToItem</span> of @Model.TotalItems items</div>
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="previous"><a href="@Url.Action("List","Customer", new { page = 1})"><span aria-hidden="true">&larr;</span> First</a></li>
                    <li class="@Html.Raw(Model.HasPreviousPage == false ? "disabled" : "")">
                        <a href="@Url.Action("List","Customer",new { page = (Model.HasPreviousPage == false ? 1 : Model.CurrentPage - 1 )})"
                           aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>                   
                    @if (Model.CurrentRange > 1)
                    {
                        <li><a data-toggle="tooltip" data-placement="top" title="More pages" href="@Url.Action("List","Customer",new { page = Model.FromPage - 1})">...</a></li>
                    }

                    @for (int page = Model.FromPage; page <= Model.ToPage; page++)
                    {
                        string active = page == Model.CurrentPage ? "active" : "";
                        <li class="@active"><a href="@Url.Action("List","Customer",new { page = page})">@page</a></li>
                    }
                    @if (Model.CurrentRange < Model.TotalRange)
                    {
                        <li class=""><a data-toggle="tooltip" data-placement="top" title="More pages" href="@Url.Action("List","Customer",new { page = Model.ToPage + 1})">...</a></li>
                    }

                    <li class="@Html.Raw(Model.HasNextPage == false ? "disabled" : "")">
                        <a href="@Url.Action("List","Customer",new { page = (Model.HasNextPage == false ? Model.TotalPages : Model.CurrentPage + 1 )})"
                           aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                    <li class="next"><a href="@Url.Action("List","Customer", new { page = Model.TotalPages})">Last <span aria-hidden="true">&rarr;</span></a></li>
                </ul>
            </nav>
            <!-- /.Pagination -->
        </div>
    </div>
</div>
