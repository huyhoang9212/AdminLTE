@model LTE.Web.ViewModels.Customer.ApplicationRoleViewModel
@{
    ViewBag.Title = "Add new role";
}

<div class="col-md-12">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Role : @Model.Name</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        @using (Html.BeginForm("Create", "UserRole", null, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)
            <div class="box-body">
              
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Name</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Role name" })
                        @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Description</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @placeholder = "Role description" })
                        @Html.ValidationMessageFor(m => m.Description, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.StartDate, new { @class= "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        
                        @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control", @placeholder = "Start date",@type="date" })
                        @Html.ValidationMessageFor(m => m.StartDate, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.EndDate, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.EndDate, new { @class = "form-control", @placeholder = "End date" })
                        @Html.ValidationMessageFor(m => m.EndDate, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.ValidationSummary(true, null, new { @class = "text-danger" })
                </div>
            </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a class="btn btn-info" href="@Url.Action("Index","UserRole")">Cancel</a>
                </div>
                <!-- /.box-footer -->
        }

    </div>
    <!-- /.box -->
    <!-- general form elements disabled -->
    <!-- /.box -->
</div>

@section Scripts{
    <script>
        
    </script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/customValidation.js")"></script>
}

